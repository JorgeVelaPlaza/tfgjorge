<br>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Edit profile</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for @user do |f| %>
    <form role="form">
      <div class="box-body">
        <div class="form-group col-xs-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.label :username %>
          <label>(@...)</label>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.label :country %>
          <%= f.text_field :pais, class: "form-control" %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.label :city %>
          <%= f.text_field :ciudad, class: "form-control" %>
        </div>
        <div class="form-group col-xs-8">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
          <br>
          <div class="form-group col-xs-3">
            <label>Current avatar</label>
            <% if @user.avatar? %>
              <%= image_tag @user.avatar.url, class: "img-circle imgresize" %>
            <% else %>
              <%= image_tag "/uploads/usuario_sin_foto.jpg", class: "img-circle imgresize" %>
              <label>(Sin foto)</label>
            <% end %>
          </div>
        </div>
      </div>
      <!-- /.box-body -->

      <div class="box-footer">
        <%= f.submit "Update profile", class: "btn btn-primary" %>
        <%= button_tag "Cancel", :type => 'button', class: "btn btn-danger" %>
      </div>
    </form>
  <% end %>
</div>
  <!-- /.box -->


<html>
<body class="body">
<%= devise_error_messages! %>

<div class="login-box">
  <div class="login-logo">
    <a><b>App</b>TFG</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Change your password</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> minimun characters)</em>
      <% end %><br />
      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "New password"%>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confrimation, autocomplete: "off", type: "password", class: "form-control", placeholder: "Confirm new password"%>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="actions col-xs-9">
          <%= f.submit "Change my password", class: "btn btn-primary btn-block btn-flat" %>
        </div>
      </div>

    <% end %>
    <br>
    <%= render "devise/shared/links" %>


  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
</body>

</html>

<%= devise_error_messages! %>
<div class="register-box">
  <div class="register-logo">
    <a><b>AppJorge</b>TFG</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Regístrate como nuevo usuario</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group has-feedback">
        <%= f.text_field :name, autofocus: true, placeholder: "Nombre", type: "text", class: "form-control" %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :username, placeholder: "Nombre de usuario (@...)", type: "text", class: "form-control" %>
        <span class="glyphicon glyphicon-star-empty form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :pais, placeholder: "País", type: "text", class: "form-control" %>
        <span class="glyphicon glyphicon-globe form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :ciudad, placeholder: "Ciudad", type: "text", class: "form-control" %>
        <span class="glyphicon glyphicon-home form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.email_field :email, placeholder: "Email", type: "email", class: "form-control" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", type: "password", class: "form-control" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmación de contraseña", type: "password", class: "form-control" %>
          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <label>Foto de perfil</label>
        <%= f.file_field :avatar, class: "filestyle form-control",'data-buttonText' => '&nbsp;&nbsp;Seleccionar',
        'data-buttonName' => 'btn-primary', 'data-buttonBefore' => true,
          "data-input" => true %>
      </div>

      <div class="row">
        <div class="col-xs-7">
          <div class="checkbox icheck-helper">
            <label>
              <input type="checkbox"> Acepto los <a href="#">términos</a>
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="actions col-xs-5">
          <%= f.submit "Registrarse", class: "btn btn-primary btn-lg btn-block btn-flat btn-helper" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    ¿Ya tienes cuenta? &nbsp;  <%= link_to "Iniciar sesión", new_user_session_path, class: "text-center btn btn-flat bg-olive" %>
  </div>
  <!-- /.form-box -->
</div>
</
<!-- /.register-box -->



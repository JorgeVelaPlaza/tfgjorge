<h3>Choose the members of the group</h3>
<%= render 'shared/errors', obj: @group %>

<%= form_for @group do |f| %>
  <div class="col-xs-9">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Unenrolled users</h3>
      </div>
      <!-- /.box-header -->
      <%= competition_url :comp_id %>
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th style="width: 100px">Avatar</th>
            <th>Username</th>
            <th style="width: 150px">Choose user</th>
          </tr>
          <% User.all.each do |u| %>
          <tr>
            <td><%= image_tag u.avatar.url, class: "img-circle imgresize", :alt => "User Image" %></td>
            <td><%= u.username %></td>
            <td>
              <%= check_box_tag '', class: "checkbox" %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <% end -%>

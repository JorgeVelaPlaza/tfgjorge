<div class="tab-content">
<div class="tab-pane active" id="tab_1">
  <div class="container">
    <div class="col-xs-8">
      <p><%= markdown(@competition.descripcion) %></p>
    </div>
    <div class="col-xs-3">
      <!-- About Me Box -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Details</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <strong><i class="fa fa-money margin-r-5"></i> Prize:  </strong>
          <%= @competition.premio %> â‚¬
          <hr>
          <strong><i class="fa fa-bar-chart margin-r-5"></i> Predictions: </strong>
          Coming soon
          <hr>
          <strong><i class="fa fa-trophy margin-r-5"></i> High score: </strong>
          Coming soon
          <hr>
          <strong><i class="fa fa-exclamation-triangle margin-r-5"></i> Difficulty:  </strong>
          <% if @competition.dificultad == 'Easy' %>
            <span class="label label-success"><%= @competition.dificultad %></span>
          <% elsif @competition.dificultad=="Medium" %>
            <span class="label label-warning"><%= @competition.dificultad %></span>
          <% elsif @competition.dificultad=="Expert" %>
            <span class="label label-danger"><%= @competition.dificultad %></span>
          <% end %>
          <hr>
          <strong><i class="fa fa-download margin-r-5"></i> Description: </strong>
          <%= link_to "Download",nil, class: "btn btn-danger btn-xs", style:"color: white;" %>
          <hr>
          <strong><i class="fa fa-refresh margin-r-5"></i> Last update: </strong>
          <%= @competition.updated_at.strftime("%d/%m/%Y a las %H:%M") %>

        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</div>


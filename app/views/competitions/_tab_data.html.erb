<div id="#data">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab_1" data-toggle="tab"><b>Competition data</b></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_1">
      <div class="container">
      <br>
        <div class="col-xs-11">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Training Data</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="table table-bordered">
                <tr>
                  <th>File</th>
                  <th>Size</th>
                  <th style="width: 150px">Download File</th>
                </tr>
                <tr>
                  <td><%= File.basename(@competition.trainingdata.path) %></td>
                  <td><%= @competition.trainingdata.size %> Bytes</td>
                  <td>
                  <% if !@competition.started %>
                    <%= link_to "Download", @competition.trainingdata.url, class: "btn btn-success btn-xs disabled" %>
                  <% else %>
                    <%= link_to "Download", @competition.trainingdata.url, class: "btn btn-success btn-xs" %>
                  <% end %>
                  </td>
                </tr>

              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
